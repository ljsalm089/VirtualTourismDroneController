<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/while_60"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.gms.maps.MapView
        android:id="@+id/v_map"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cl_info"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/v_map"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_locations"
            android:background="@color/gray_light"
            android:layout_width="@dimen/uxsdk_300_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/uxsdk_15_dp"
            tools:listitem="@layout/item_monitoring_status"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_start_record"
            android:layout_width="wrap_content"
            android:text="Start Record"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/spinner_locations"
            app:layout_constraintTop_toTopOf="@+id/spinner_locations"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_locations"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_benchmark_location"
            android:layout_width="wrap_content"
            style="@style/GPSInfoStyle"
            android:text="Benchmark Location: -/-/-"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_start_record"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_drone_location"
            android:layout_width="wrap_content"
            style="@style/GPSInfoStyle"
            app:layout_constraintTop_toBottomOf="@+id/tv_benchmark_location"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Drone Location: -/-/-"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_gap_distance"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_drone_location"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Gap Distance (m): -"
            style="@style/GPSInfoStyle"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_file_path"
            app:layout_constraintTop_toBottomOf="@+id/tv_gap_distance"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/GPSInfoStyle"
            android:text="GPS Records file path: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>